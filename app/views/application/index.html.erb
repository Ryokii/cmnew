      <!-- Log in Section -->
      <section id="login" ng-hide="!dispLogin">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Sign In</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form name="sign_inForm" id="signInForm" ng-submit="sign_in(user)" novalidate>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="Email (example@example.com)" id="password" ng-model="user.email" required data-validation-required-message="Please enter your email.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Password</label>
                                <input type="Password" class="form-control" placeholder="Password" id="email" ng-model="user.password" required data-validation-required-message="Please enter valid password.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success btn-lg">Sign In</button>
                                <a href ng-click="dispLogin = !dispLogin; dispSignup = !dispSignup" >Sign Up!</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>




      </section>

      <!-- Sign up Section -->
      <section id="signup" ng-hide="!dispSignup">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Sign Up</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <form name="sign_inForm" id="signInForm" ng-submit="sign_up(user)" novalidate>
                          <div class="row control-group">
                              <div class="form-group col-xs-12 floating-label-form-group controls">
                                  <label>Name</label>
                                  <input type="text" class="form-control" placeholder="Name" id="name" ng-model="user.name" required data-validation-required-message="Please enter name.">
                                  <p class="help-block text-danger"></p>
                              </div>
                          </div>
                          <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Email</label>
                                <input type="email" class="form-control" placeholder="Email (example@example.com)" id="password" ng-model="user.email" required data-validation-required-message="Please enter your email.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Password</label>
                                <input type="Password" class="form-control" placeholder="Password" id="email" ng-model="user.password" required data-validation-required-message="Please enter valid password.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success btn-lg">Sign Up</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
      </section>



      <!-- Conference Table Section -->
      <section id="conf-table" ng-show="conferences.length" ng-cloak>
          <div class="container">
                  <div class="conf">
                    <div class="row">
                      <ul id="conf-list">
                      <li ng-repeat="conference in conferences">
                      <div class="col-md-4 col-sm-12 col-xs-12">
                          <div class="conf-table">
                              <div class="conf-header" ng-click="displayActiveConf(conference)">
                                    <p class="conf-title">{{conference.name}}</p>
                              </div>
                              <div class="conf-list" ng-click="displayActiveConf(conference)">
                                  <ul>
                                      <li><i class="fa fa-envelope"></i>  {{conference.organizer}}</li>
                                      <li><i class="fa fa-signal"></i>Location: {{conference.location}}</li>
                                  </ul>
                              </div>
                         </div>
                      </div>
                    </li>
                    </ul>
                  </div>

              </div>
          </div>
      </section>



    <!-- Conference Section -->
      <section id="conf-table" ng-show="showConf" ng-cloak>

        <div class="container">
            <div  class="confs-header">
              <p class="conf-title">{{activeC.name}}</p>
            </div>
            <div class="surrounding">
